<div class="album text-muted">
  <div class="container">
    <div class="row sortable">
      <!-- The following is a MANUAL PARTIAL COLLECTION -->
      <!-- We manually declared it as a partial and passing in -->
      <!-- the exact name of the partial "portfolio_item" -->
      <!-- The "collection" is telling rails that we are passing  -->
      <!-- the instance variable @portfolio_items as the collection of data -->
      <%= render partial: 'portfolio_item', collection: @portfolio_items %>
    </div>
  </div>
</div>